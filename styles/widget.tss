	bottom: 16,

	color: Alloy.CFG.colors.text,
	font: {

		fontSize: 18,
		fontWeight: 'bold'
	}
},


'.permissionView__title[platform=ios]': {

	minimumFontSize: 14
},


'.permissionView__description': {

	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,

	font: {

		fontSize: 12
