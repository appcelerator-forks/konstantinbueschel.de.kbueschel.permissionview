'.permissionView__container': {

	navBarHidden: true,
	backgroundColor: 'transparent'
},


'.permissionView__overlay': {

	zIndex: 5
},


'.permissionView__content': {

	width: 270,
	height: Ti.UI.SIZE,

	layout: 'vertical',

	backgroundColor: '#ffffff',
	borderRadius: 16
},


'.permissionView__imageContainer': {

	width: 112,
	height: 112,

	top: 22,
	bottom: 22,

	borderRadius: 56,
	borderWidth: 1,
	borderColor: '#e8e8e8',

	backgroundColor: '#e8e8e8'
},


'.permissionView__image': {

	width: 84,
	height: 84,

	borderRadius: 42,
	borderWidth: 0,

	backgroundColor: '#12c48b',

	backgroundGradient: {

		type: 'linear',

		startPoint: { x: '60%', y: '0%' },
		endPoint: { x: '60%', y: '100%' },

		colors: [
			{color: '#00ffffff', offset: 0},
			{color: '#33000000', offset: 1.0}
		]
	}
},


'.permissionView__descriptionContainer': {

	height: Ti.UI.SIZE,

	right: 18,
